{% extends 'base.jinja2' %}

{% block header %}
  <header>
    <h1 class="paste-header">Lista de pastes ({{ language }})</h1>
  </header>
{% endblock %}

{% block main %}
  <main class="paste-languages">
    <h2>Lista de pastes</h2>
    <ul>
      {% for paste in pastes %}
        <li><a href="{{ url('pastebin-detail', args=(paste.id,)) }}">{{ paste.title }}</a></li>
      {% endfor %}
    </ul>
  </main>
{% endblock %}